@using X.PagedList;
@using X.PagedList.Mvc.Core;

@using X.PagedList.Web.Common;

@model IPagedList<coreFoodProject.Models.Food>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Food List</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Food Name</th>
        <th>Price</th>
        <th>Stock</th>
        <th>Category Name</th>
        <th>Delete</th>
        <th>Update</th>
        <th>Details</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.FoodID</td>
            <td>@x.Name</td>
            <td>@x.Price</td>
            <td>@x.Stock</td>
            <td>@x.Category.CategoryName</td>
            <td><a href="/Food/DeleteFood/@x.FoodID" class="btn btn-danger">Delete</a></td>
            <td><a href="/Food/FoodGet/@x.FoodID" class="btn btn-success">Update</a></td>
            <td><a href="#" class="btn btn-info">Details</a></td>
        </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }),new PagedListRenderOptions 
{ 
    LiElementClasses = new List<string>
    {"page-link"}
})



<a href="/Food/AddFood/" class="btn btn-primary">New Food</a>
